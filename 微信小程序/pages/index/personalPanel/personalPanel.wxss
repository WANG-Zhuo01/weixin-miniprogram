/* pages/index/personalPanel/personalPanel.wxss */
.personalPanel{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgb(253, 172, 189);
}

.personalPanel  button{
    width: 50%;
    border-radius: 10px;
    border: 1px solid rgb(255, 100, 118);
    box-shadow: 2px 2px 5px;
    color: rgb(255, 100, 118);
    justify-content: space-between;
    margin-top: 10px;
}
.personalPanel view{

    display: flex;
    flex-direction: row;
    width: 47%;
    justify-content: space-between;
}