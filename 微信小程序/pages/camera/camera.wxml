<!--pages/camera/camera.wxml-->
<!--拍摄页-->
<view class="view-cls">

    <camera wx:if="{{show}}" mode="normal" device-position="{{cameraPosition}}" class="camera-cls" binderror="haveNotAllow" resolution="high" 	frame-size="large" 	flash="auto"></camera>
    <view wx:else="{{show}}" style='margin-top: 50px; width:100%; height:300px; background-color:rgb(255, 255, 255) ; display: flex; align-items: center; justify-content: center;'>
    <view class='cameraSVGContainer'>
    <image style="width:120px;height:120px" src='data:image/svg+xml;base64,'></image>
    <button style='color:rgb(255, 149, 172)' bindtap="showCamera">拍摄照片</button>
    </view>
    <!-- <view class='chooseCamera'> -->
    
    <!-- </view> -->
    </view>
    <cover-view wx:if="{{show}}" class="active" bindtap="takeAPhoto"></cover-view>
    <!-- <button class="mini-btn" type="primary" size="mini">按钮</button> -->
    
   <view style="width: 100%;height:23%; display: flex; align-items: center; justify-content: {{itemAlign}};">
   <!-- <button class="mini-btn" type="default" size="mini">按钮</button> -->
   
        <view class='chooseGallery'> <button class="mini-btn" size='{{btnSize}}' bindtap="chooseGallery">从相册选择</button> </view>
        
        <view wx:if="{{show}}" class="changeCP" bindtap="changeCameraPosition">
            <image src='https://shoot.photo/images/2022/02/12/qBcp8.png'  style="width: 35px; height: 35px; border-radius: 50%;"></image>
        </view>
   </view>
</view>
